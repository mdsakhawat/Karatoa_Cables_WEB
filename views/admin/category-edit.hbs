
<div class="row col-md-12 mt-4">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <div>
      {{#if err_message}}
      <div id="error-message" class="alert alert-warning alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        {{err_message}}
      </div>
      {{/if}}
      <h1 > Category edit</h1>
    </div>
    <div class="mt-3">
      <form method="POST">
        <div>
           <div class="bg-black text-white"> <h5>Category name</h5> </div>
          <input value="{{category.NameCategory}}" name="NameCategory" class="form-control bg-white" id="focusedInput"
            type="text">
        </div>
        <div>
          <div class="mt-3">
            <h3>Header category</h3>
          </div>
          <div class="bg-dark text-white mb-2"> Current : {{headerCategoryName}}</div>
          <div class="bg-dark text-white ">Change to : <select name="HeaderCategoryId" id="HeaderCategoryId">
              {{#each headerCategories}}
              <option value="{{this.Id}}">{{this.HeaderNameCategory}}</option>
              {{/each}}
            </select></div>

        </div>
        <button type="submit" class="btn btn-success" style="margin-top: 25px;">
          Save
        </button>

      </form>
    </div>
  </div>
  <div class="col-md-3">
  </div>
</div>