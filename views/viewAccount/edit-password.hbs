<section class="user-ac-pass-section">

<div class="container rounded bg-white mt-5 mb-4  col-xl-10 col-md-10">
    <div class="row">
        <div class="col-md-4 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5 text-dark text-bold"><img class="rounded-circle mt-5" width="100px"  <img src="../../public/avatar/avatar.png" alt="Avatar" style="width:200px"><span class="font-weight-bold">{{user.FullName}}</span><span class="text-dark">{{user.Email}}</span><span> </span></div>
        </div>
        <div class="col-md-8 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right text-dark">Password Changing</h4>
                </div>
                 {{#if err_message}}
                  <div id="error-message" class="alert alert-warning alert-dismissible fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                    {{err_message}}
                  </div>
                  {{/if}}
                  
                <form method="POST" action="" id="frmChangePassword">              
                <div class="row mt-3">
                    <div class="col-md-6 text-dark">
                      <label  for="floatingInput" class="labels">Enter Current Password</label>
                    <input type="password"  class="form-control" id="txtCurrentPw" placeholder="Enter Current Password" name="CurrentPassword">
                    </div>          
                </div>
                 <div class="row mt-2">
                    <div class="col-md-6 text-dark">
                      <label  for="floatingInput" class="labels">Enter New Password</label>
                    <input type="password"  class="form-control" id="txtNewPw" placeholder="Enter New Password" name="NewPassword">
                    </div>    
                </div>
                <div class="row mt-3">
                          <div class="col-md-6 text-dark">
                      <label  for="floatingInput" class="labels">Confirm New Password</label>
                    <input type="password"  class="form-control" id="txtRetypeNewPw" placeholder="Re-type New Password" name="RetypeNewPassword">
                    </div>        
                </div>
                <div class="mt-4 ">
                  <button class="btn btn-primary profile-button" type="submit" > Change Password
                  </button>
                  </div>
                </form>
            </div>
        </div>
    
    </div>
    </div>
</section>

